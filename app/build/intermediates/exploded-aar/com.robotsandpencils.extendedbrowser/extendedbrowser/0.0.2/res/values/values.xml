<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000</color>
    <color name="title_dark">#0b0c0c</color>
    <color name="white">#fff</color>
    <color name="window_background">#dee0e2</color>
    <declare-styleable name="ExtendedBrowser"><attr format="boolean" name="showNavigationBar"/><attr format="reference" name="progressBar"/></declare-styleable>
    <dimen name="spacing">4dp</dimen>
    <dimen name="spacing_normal">8dp</dimen>
    <dimen name="web_navigation_view_padding">15dp</dimen>
    <string name="app_name">ExtendedBrowser</string>
    <string name="web_browser_address_bar_hint">Address</string>
    <style name="LineDivider">
        <item name="android:background">@color/window_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:textColor">@color/title_dark</item>
    </style>
    <style name="WebBrowserAddressBar">
        <item name="android:background">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:hint">@string/web_browser_address_bar_hint</item>
    </style>
</resources>