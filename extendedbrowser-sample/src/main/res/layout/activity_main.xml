<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.robotsandpencils.extendedbrowsersample.MainActivity">

        <LinearLayout android:id="@+id/bottomBar"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true">

            <Button android:layout_width="wrap_content" android:id="@+id/toggleAddressBar"
                    android:layout_height="wrap_content"
                    android:text="Toggle address bar"/>

            <Button android:layout_width="wrap_content" android:id="@+id/toggleNavigationBar"
                    android:layout_height="wrap_content"
                    android:text="Toggle navigation"/>

        </LinearLayout>

        <com.robotsandpencils.extendedbrowser.views.ExtendedBrowser
            android:id="@+id/web_view_browser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomBar"
            app:showAddressBar="true"
            app:showNavigationBar="true"/>

    </RelativeLayout>
</layout>
